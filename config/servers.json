{
  "servers": [
    {
      "name": "filesystem",
      "description": "Local filesystem access via MCP",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 30000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 60,
        "requestsPerDay": 10000
      },
      "metadata": {
        "tags": ["filesystem", "local"],
        "category": "storage",
        "version": "1.0.0"
      }
    },
    {
      "name": "everything",
      "description": "MCP server that exercises all protocol features",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-everything"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 30000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 30,
        "requestsPerDay": 5000
      },
      "metadata": {
        "tags": ["demo", "testing", "all-features"],
        "category": "utility",
        "version": "1.0.0"
      }
    },
    {
      "name": "memory",
      "description": "In-memory key-value storage via MCP",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "timeoutMs": 3000
      },
      "rateLimits": {
        "requestsPerMinute": 120,
        "requestsPerDay": 50000
      },
      "metadata": {
        "tags": ["memory", "storage", "kv"],
        "category": "storage",
        "version": "1.0.0"
      }
    },
    {
      "name": "github",
      "description": "GitHub API integration for repository management, file operations, issues, and pull requests",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@iflow-mcp/server-github"],
        "env": {}
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 30,
        "requestsPerDay": 5000
      },
      "metadata": {
        "tags": ["github", "git", "api", "repository", "integration"],
        "category": "integration",
        "version": "0.6.2",
        "requiresEnv": ["GITHUB_PERSONAL_ACCESS_TOKEN"]
      }
    },
    {
      "name": "slack",
      "description": "Slack integration for reading messages, sending messages, and managing channels",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "slack-mcp-server"],
        "env": {}
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 20,
        "requestsPerDay": 2000
      },
      "metadata": {
        "tags": ["slack", "chat", "messaging", "integration"],
        "category": "integration",
        "version": "1.1.28",
        "requiresEnv": ["SLACK_TOKEN"]
      }
    },
    {
      "name": "discord",
      "description": "Discord integration for server management, message operations, and channel management",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "mcp-server-discord"],
        "env": {}
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 20,
        "requestsPerDay": 2000
      },
      "metadata": {
        "tags": ["discord", "chat", "messaging", "integration"],
        "category": "integration",
        "version": "1.2.8",
        "requiresEnv": ["DISCORD_TOKEN"]
      }
    }
  ]
}
