{
  "servers": [
    {
      "name": "filesystem",
      "description": "Local filesystem access via MCP",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/tmp"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 30000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 60,
        "requestsPerDay": 10000
      },
      "metadata": {
        "tags": ["filesystem", "local"],
        "category": "storage",
        "version": "1.0.0"
      }
    },
    {
      "name": "everything",
      "description": "MCP server that exercises all protocol features",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-everything"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 30000,
        "timeoutMs": 5000
      },
      "rateLimits": {
        "requestsPerMinute": 30,
        "requestsPerDay": 5000
      },
      "metadata": {
        "tags": ["demo", "testing", "all-features"],
        "category": "utility",
        "version": "1.0.0"
      }
    },
    {
      "name": "memory",
      "description": "In-memory key-value storage via MCP",
      "transport": {
        "type": "stdio",
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"]
      },
      "auth": { "type": "none" },
      "healthCheck": {
        "enabled": true,
        "intervalMs": 60000,
        "timeoutMs": 3000
      },
      "rateLimits": {
        "requestsPerMinute": 120,
        "requestsPerDay": 50000
      },
      "metadata": {
        "tags": ["memory", "storage", "kv"],
        "category": "storage",
        "version": "1.0.0"
      }
    }
  ]
}
